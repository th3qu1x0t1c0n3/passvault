{
  "manifest_version": 3,
  "short_name": "PassMan",
  "name": "Password manager",
  "description": "This extension is the best way to store and auto-fill your passwords.",
  "version": "1.0",
  "icons": {
    "64": "favicon.ico",
    "32": "favicon.ico",
    "24": "favicon.ico",
    "16": "favicon.ico",
    "192": "logo192.png",
    "512": "logo512.png"
  },
  "permissions": [
    "activeTab",
    "storage",
    "scripting"
  ],
  "start_url": ".",
  "display": "standalone",
  "theme_color": "#000000",
  "background_color": "#ffffff",
  "background": {
    "service_worker": "background.js"
  },
  "action": {
    "default_popup": "index.html",
    "default_icon": {
      "16": "lock.jpg"
    }
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["contentScript.js"]
    }
  ]
}
